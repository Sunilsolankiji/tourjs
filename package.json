{
  "name": "jstour",
  "version": "1.0.2",
  "type": "module",
  "description": "A lightweight, dependency-free JavaScript library to create engaging website tours and interactive walkthroughs",
  "main": "src/jstour.js",
  "files": [
    "src/",
    "README.md",
    "LICENSE",
    "docs/"
  ],
  "scripts": {
    "lint": "eslint src/jstour.js",
    "lint:fix": "eslint src/jstour.js --fix",
    "format": "prettier --write \"src/**/*.{js,css}\" \"**/*.{md,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,css}\" \"**/*.{md,json}\"",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.css": [
      "prettier --write"
    ],
    "**/*.md": [
      "prettier --write"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  },
  "keywords": [
    "tour",
    "walkthrough",
    "guide",
    "tutorial",
    "onboarding",
    "tooltip",
    "ui",
    "ux",
    "product-tour",
    "user-guide",
    "interactive",
    "vanilla-js",
    "no-dependencies"
  ],
  "author": "Sunil Solanki",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sunilsolankiji/jstour.git"
  },
  "bugs": {
    "url": "https://github.com/Sunilsolankiji/jstour/issues"
  },
  "homepage": "https://github.com/Sunilsolankiji/jstour#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.7.4",
    "standard-version": "^9.5.0"
  }
}
